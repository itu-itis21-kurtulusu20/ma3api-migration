algorithm ALGORITHM.&id({MessageRecovery}),
parameters ALGORITHM.&Type({MessageRecovery}{@algorithm}) OPTIONAL
}
MessageRecovery ALGORITHM ::= {
dswmr-mechanism1A |
dswmr-mechanism2A |
dswmr-mechanism3A |
dswmr-mechanism1N |
