ALGORITHM ::= CLASS {
&id OBJECT IDENTIFIER UNIQUE,
&Type OPTIONAL
}
WITH SYNTAX { OID &id [PARMS &Type] }
-- Message recovery signature mechanisms --
OID ::= OBJECT IDENTIFIER -- Alias
