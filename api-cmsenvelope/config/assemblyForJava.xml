<?xml version='1.0' encoding='UTF-8'?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>java</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>${project.build.directory}/zkm/${project.build.finalName}.jar</source>
			<outputDirectory>lib</outputDirectory>
			<destName>${project.build.finalName}.jar</destName>
		</file>
<!--
		<file>
			<source>${project.build.directory}/${artifactId}-javadoc.jar</source>
			<outputDirectory>javadoc</outputDirectory>
			<destName>${project.build.finalName}-javadoc.jar</destName>
		</file>
-->
	</files>
	<fileSets>
		<fileSet>
			<directory>target/dependency</directory>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>./*.zip</exclude>
				<exclude>./ma3api-cmsenvelope**</exclude>
				<exclude>./META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/dependencyjavadocs</directory>
			<outputDirectory>javadoc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/sample-policy</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}\testsrc\bundle\esya\api\cmsenvelope</directory>
			<outputDirectory>ornekler\src\bundle\esya\api\cmsenvelope</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../api-parent/docs/manual</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>MA3 API Kullanim Kilavuzu.pdf</include>
				<include>MA3 API KULLANICI LISANS SOZLESMESI.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/docs/manual</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>./*.txt</include>
				<include>./*.pdf</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
